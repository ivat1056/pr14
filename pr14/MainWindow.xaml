<Window x:Class="pr14.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pr14"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="20, 0, 0, 0">
                    <Image Height="70" Width="70" Source="image/school_logo.png" Margin="10"/>
                    <TextBlock Text="Школа языков" FontSize="28"  VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock x:Name="tbLoginAdmin" Grid.Row="2"  HorizontalAlignment="Right" Margin="0, 0, 20, 0" />
            </Grid>
            <Frame Name="fMain" NavigationUIVisibility="Hidden" Grid.Row="1">
            </Frame>
        </Grid>
    </Grid>
</Window>